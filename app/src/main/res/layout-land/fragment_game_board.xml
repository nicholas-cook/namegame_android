<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/name_game_title_text_margin"
        android:gravity="center_horizontal"
        android:textColor="@color/darkGray"
        android:textSize="22sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/name_game_title_text_margin"
        android:layout_marginEnd="@dimen/name_game_title_text_margin"
        android:layout_marginStart="@dimen/name_game_title_text_margin">

        <TextView
            android:id="@+id/correct_incorrect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/name_game_title_text_margin"
            android:layout_marginEnd="@dimen/name_game_title_text_margin"
            android:layout_marginStart="@dimen/name_game_title_text_margin"
            android:gravity="center_horizontal"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/correct_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="@dimen/name_game_title_text_margin"
            android:layout_marginRight="@dimen/name_game_title_text_margin"
            android:layout_marginStart="@dimen/name_game_title_text_margin"
            android:layout_toLeftOf="@+id/incorrect_total"
            android:layout_toStartOf="@+id/incorrect_total"
            android:gravity="start"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/incorrect_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="@dimen/name_game_title_text_margin"
            android:layout_marginRight="@dimen/name_game_title_text_margin"
            android:gravity="end"
            android:textSize="22sp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/face_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="@string/cdFace" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:contentDescription="@string/cdFace" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:contentDescription="@string/cdFace" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:contentDescription="@string/cdFace" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:contentDescription="@string/cdFace" />

    </LinearLayout>

</LinearLayout>